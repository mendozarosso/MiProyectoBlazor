@page "/AprendeMas"

<PageTitle>Aprende Más</PageTitle>

<div class="container">
    <h1>Aquí tengo mi lista de videos que use para entender blazor</h1>

    @foreach (var video in videos)
    {
        <div class="video-container">
            <h2>@video.Title</h2>
            <p>@video.Description</p>
            <iframe width="560" height="315" src="@video.Url" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    }
</div>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        color: #0366d6;
        text-align: center;
        margin-bottom: 30px;
    }

    .video-container {
        margin-bottom: 40px;
        border: 1px solid #e1e4e8;
        border-radius: 6px;
        padding: 20px;
        background-color: #f6f8fa;
    }

    h2 {
        color: #24292e;
        margin-bottom: 10px;
    }

    p {
        color: #586069;
        margin-bottom: 15px;
    }

    iframe {
        max-width: 100%;
        border-radius: 6px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

